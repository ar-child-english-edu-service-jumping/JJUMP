<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg" >

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="13dp"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back_black"
        android:background="#00FFFFFF"/>

    <ListView
        android:id="@+id/listview_folder"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:cacheColorHint="#00000000"
        android:scrollingCache="false"
        android:smoothScrollbar="true"
        android:layout_width="match_parent"
        android:layout_height="130dp"/>

    <Button
        android:id="@+id/btn_add_folder"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="+ 새 폴더 추가"
        android:fontFamily="@font/notosnaskr_medium"
        android:textColor="#181818"
        android:textSize="17dp"
        android:background="@drawable/btn_quiz_answer_correct"/>


</LinearLayout>