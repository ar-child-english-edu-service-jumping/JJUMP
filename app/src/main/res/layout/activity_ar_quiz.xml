<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".java.ArQuizActivity">

    <fragment
        android:id="@+id/quiz_ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_top_wave" />
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화면에 등장하는 그림에 어울리는 단어를 선택해봐요!"
        android:textColor="#181818"
        android:fontFamily="@font/dodamdodam"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/quiz_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/btn_quiz_number_selected"
        android:text="1"/>
    <Button
        android:id="@+id/quiz_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="110dp"
        android:background="@drawable/btn_quiz_number"
        android:text="2"/>
    <Button
        android:id="@+id/quiz_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="180dp"
        android:background="@drawable/btn_quiz_number"
        android:text="3"/>
    <Button
        android:id="@+id/quiz_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="250dp"
        android:background="@drawable/btn_quiz_number"
        android:text="4"/>
    <Button
        android:id="@+id/quiz_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="320dp"
        android:background="@drawable/btn_quiz_number"
        android:text="5"/>
    
    <Button
        android:id="@+id/quiz_answer_choice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="630dp"
        android:layout_marginStart="10dp"
        android:text="호랑이"
        android:textSize="17dp"
        android:textColor="#181818"
        android:fontFamily="@font/notosnaskr_medium"
        android:background="@drawable/btn_quiz_answer"/>
    <Button
        android:id="@+id/quiz_answer_choice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="10dp"
        android:text="말"
        android:textSize="17dp"
        android:textColor="#181818"
        android:fontFamily="@font/notosnaskr_medium"
        android:background="@drawable/btn_quiz_answer"/>

</FrameLayout>