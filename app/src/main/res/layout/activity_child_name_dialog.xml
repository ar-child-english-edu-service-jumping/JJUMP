<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_dialog"
    tools:context=".java.ChildNameDialog">

    <EditText
        android:id="@+id/et_child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@null"
        android:hint="아이의 이름을 입력해 주세요! "
        android:textColor="#A4A4A9"
        android:textSize="17dp"
        android:fontFamily="@font/notosnaskr_medium"/>

    <LinearLayout
        android:id="@+id/button_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_child_name"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:textSize="16dp"
            android:text="취소하기"
            android:fontFamily="@font/notosnaskr_medium"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:text="저장하기"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:fontFamily="@font/notosnaskr_medium" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>