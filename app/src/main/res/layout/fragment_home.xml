<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/backgroud_wave"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:src="@drawable/bg_main_wave"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="94dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/ic_tree1"
        android:layout_width="560dp"
        android:layout_height="560dp"
        android:src="@drawable/gif_tree1"
        android:layout_marginTop="142dp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/backgroud_wave" />
    <ImageView
        android:id="@+id/ic_tree2"
        android:layout_width="520dp"
        android:layout_height="520dp"
        android:src="@drawable/gif_tree2"
        android:visibility="invisible"
        android:layout_marginTop="94dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/backgroud_wave" />
    <ImageView
        android:id="@+id/ic_tree3"
        android:layout_width="440dp"
        android:layout_height="440dp"
        android:src="@drawable/gif_tree3"
        android:visibility="visible"
        android:layout_marginTop="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/backgroud_wave" />


    <ImageButton
        android:id="@+id/btn_camera"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btn_camera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backgroud_wave"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_camera">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierun_regular"
            android:text="카메라"
            android:textColor="#181818"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierun_regular"
            android:text="를 통해 "
            android:textColor="#181818"
            android:textSize="17dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierun_regular"
            android:text="재미있게"
            android:textColor="#181818"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierun_regular"
            android:text=" 읽어 볼까요?"
            android:textColor="#181818"
            android:textSize="17dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>